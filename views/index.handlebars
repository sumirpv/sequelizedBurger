<div class="container-fluid" >
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
<h1> Devour Delicious Burger!!!</h1>
<img src="/assets/img/burger.jpg">
    </div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row">
        <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <h2>Ordered Burger !</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
            {{> burger/burger-command devour=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
    <div class="col-lg-4">
      <h2>Devoured Burger !</h2>
      {{!-- <h2>Devoured Burger !<button id="delete" type="submit">Delete All</button></h2> --}}
      <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <li>  {{this.id}}. {{this.burger_name}}
                <button class="delete_btn" data-id="{{this.id}}">DELETE</button>
          </li>

              {{!-- {{> burger/burger-command devour=true}} --}}
          {{/unless}}
        {{/each}}

      </ul>
    </div>

  </div>
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <form class="create-form">

        <div class="form-group">
          <label for="ca"> <h2>Enter your Burger :</h2></label>
          <textarea type="text" id="ca" name="name" class="form-control" rows="3"></textarea>
        </div>

      <button  id="order" type="submit">Order Burger</button>
      </form>
    </div>

  </div>



 </div>
